<header class="site-width flex py-4 justify-between items-center hd-border-bottom sm:block">
	<a class="w-1/6 leading-none" href="/" aria-label="Back to home">
		<img src="/images/logo/tg-sig-logo.svg" alt="Ted Goas signature logo." height="60" width="122" border="0">
	</a>
	<nav class="nav w-4/6">
		<ul class="flex flex-row flex-wrap justify-center sm:leading-loose">
			{% for item in navigation.main %}
			<li>
				<a href="{{ item.url | safe }}" class="link-nav muted mx-4 {% if page.url == item.url %}active highlighted{% endif %}">{{ item.label }}</a>
			</li>
			{% endfor %}
		</ul>
	</nav>
</header>
