---
layout: default
permalink: "/{{ page.fileSlug }}/"
---
<article>
  {# featured post image #}
  {% if featured_image %}
  <figure class="mb-10">
      <img src="{{ featured_image }}" alt="{{ image_caption }}">
  </figure>
  {% endif %}
  <h1 class="page-title mb-4">{{ title }}</h1>
  <time datetime="{{ date }}" class="uppercase text-base tc-light">
      {{ page.date | dateDisplay }}
  </time>
  <div class="hr-above">
      {{ content | safe }}
  </div>
</article>
