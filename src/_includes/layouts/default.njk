{%- set metaTitle -%}
    {%- if not title -%}{{ site.title }} - {{ site.description | safe }}
    {%- else -%}{{ title | safe }} | {{ site.title }}
    {%- endif -%}
{%- endset -%}
{%- set metaDesc -%}
    {%- if not description -%}{{ site.description | safe }}
    {%- else -%}{{ description | safe }}
    {%- endif -%}
{%- endset -%}
{%- set metaKeywords -%}
    {%- if tags -%}{%- for tag in tags -%}{{ tag }},{%- endfor -%}{%- endif -%}
    {%- if site.keywords -%}
        {%- for keyword in site.keywords -%}
            {{ keyword }}{%- if not loop.last %},{% endif -%}
        {%- endfor -%}
    {%- endif -%}
{%- endset -%}
<!DOCTYPE html>
<html>
    
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ metaTitle }}</title>
    <meta name="title" content="{{ metaTitle }}">
    <meta name="description" content="{{ metaDesc }}">
    <meta name="author" content="{{ author.name }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ site.url | url }}{{ page.url }}">
    <link rel="shortcut icon" type="image/png" href="{{ '/assets/img/favicon.png' | url }}">
    <link rel="apple-touch-icon" href="{{ '/assets/img/apple-touch-icon.png' | url }}">
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">
</head>	

<body {% if body_class %}id="{{ body_class }}"{% endif %} class="flex flex-col h-screen">
    <div class="max-w-5xl w-full mx-auto px-2 flex-grow">
        {% include "partials/header.njk" %}
        <main >
            {% if layout === "post" %}
            {{ content | safe }}
            {% else %}
            <div>
                {{ content | safe }}
            </div>
            {% endif %}
        </main>
        {% include "partials/footer.njk" %}
    </div>
    <script src="{{ '/assets/js/bundle.js' | url }}"></script>
    <script type="module">
        import { annotate, annotationGroup } from 'https://unpkg.com/rough-notation?module';

        const n2 = document.querySelector('.box-blue');
        const n3 = document.querySelector('.box-green');
        const n4 = document.querySelector('.box-red');
        const n5 = document.querySelector('.underline-gray');
        const n6 = document.querySelector('.underline-gray2');
        
        const a2 = annotate(n2, { type: 'box', color: '#3BC9DB', animationDuration: 500 });
        const a3 = annotate(n3, { type: 'box', color: '#059669', animationDuration: 500 });
        const a4 = annotate(n4, { type: 'box', color: '#B91C1C', animationDuration: 500 });
        const a5 = annotate(n5, { type: 'underline', color: '#475569', animationDuration: 500, iterations: 2 });
        const a6 = annotate(n6, { type: 'underline', color: '#475569', animationDuration: 500, iterations: 2 });
        
        const ag = annotationGroup([a2, a3, a4, a5, a6]);
        ag.show();
        
    </script>
</body>
</html>