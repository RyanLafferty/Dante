---
layout: default
---

<article>
    <header>
        {% if featured_image %}
        <img src="{{ featured_image | url }}" alt="">
        {% endif %}
        <h1>{{ title }}</h1>
        <div>{{ page.date | readableDate }}</div>
    </header>
    <div class="prose">
        {{ content | safe }}
    </div>
</article>