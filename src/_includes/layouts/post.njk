---
layout: default
---

<article class="flex flex-col items-center">
    {% if featured_image %}
    <img src="{{ featured_image | url }}" alt=""{% if featured_image_classes %} class="{{ featured_image_classes }}"{% endif %}>
    {% endif %}
    <div class="prose prose-xl text-white">
        <header class="pt-12 pb-4">
            <h1>{{ title }}</h1>
            <time>{{ page.date | readableDate }}</time>
        </header>
        {{ content | safe }}
    </div>
</article>